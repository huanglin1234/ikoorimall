/* pages/points/points.wxss */

.container {
  display: block;
  padding: 0;
  align-items: normal;
}

.userinfo {
  display: flex;
  flex-direction: column;
  padding: 34rpx 0;
  align-items: center;
  background: #24b2f4;
  /*   background: #54bd46; */
}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}

.userinfo-point {
  color: #fff;
  font-size: 28rpx;
}

.point-display {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.point-sign {
  color: #fff;
  font-size: 32rpx;
  border: 1px solid #fff;
  padding: 10rpx 40rpx 10rpx 40rpx;
  margin-top: 10px;
  border-radius: 46rpx;
  line-height: 40rpx;
  height: 40rpx;
}

.point-record {
  background-color: #f3f3f3;
  /* margin-top: 20rpx; */
  padding: 26rpx;
  font-size: 26rpx;
  color: #8b8b8b;
  height: 60rpx;
  border-bottom: 2px solid #fff;
}

.point-record-score {
  position: absolute;
  right: 12px;
  color: #24b1f6;
  line-height: 12rpx;
  font-size: 30rpx;
}

.point-record-time {
  position: absolute;
  right: 12px;
}

.point-convert {
  background-color: #f3f3f3;
  margin-top: 32rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #8b8b8b;
}

.point-coupon {
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-top: -8rpx;
  margin-right: 6rpx;
}

.point-convert-button {
  /*   color: #8b8b8b; *//*  border: 1px solid #8b8b8b; */
  color: #24b1f6;
  border: 1px solid #24b1f6;
  padding: 4rpx 20rpx;
  width: 64rpx;
  margin: 10rpx;
  text-align: center;
}

.coupon-change {
  position: absolute;
  align-self: flex-end;
  color: #fff;
  font-size: 28rpx;
  background-color: #52c0f3;
  border-radius: 30rpx;
  right: 20rpx;
  padding: 8rpx 12rpx;
}

/* 错误提示 */

.toptips {
  display: block;
  position: fixed;
  -webkit-transform: translateZ(0) translateY(-100%);
  width: 100%;
  /* 至少有一行的高度，保证第一次动画显示正常 */
  min-height: 32px;
  top: 0;
  line-height: 2.3;
  font-size: 14px;
  text-align: center;
  color: #fff;
  background-color: #e64340;
  z-index: 110;
  /* 动画部分 */
  transition: all 0.4s ease;
}

.toptips--show {
  -webkit-transform: translateZ(0) translateY(0);
}
