.g-row {
  margin-left: auto;
  margin-right: auto;
}

.greybg {
  background-color: #f4f4f4;
  min-height: 100%;
}

.m-uc-top {
  height: 280rpx;
  /* background: url(http://img02.camel.com.cn/image/m-uc-top-bg.jpg) no-repeat top center; *//*  background-color: #ffb700; */
  background-color: #24b2f4;
  background-size: 100%;
}

.m-profile {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.m-profile .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.m-profile .nickname {
  font-size: 37rpx;
  color: #fff;
}

.m-profile .memberTitle1 {
  /*  color: #b4a078; */
  color: #000;
  font-size: 27rpx;
}

.icon {
  color: #333;
}

.m-uc-wrap {
  background-color: #fff;
  margin-top: 20rpx;
}

.m-uc-wraptit {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d9d9d9;
  margin-left: 22rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}

.m-uc-wraptit .icon-arrow-right {
  margin-right: 22rpx;
  font-size: 24rpx;
  color: #999;
}

.m-uc-menu .list {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 24rpx;
}

.m-uc-menu .list .item {
  flex: 1;
  text-align: center;
  margin-top: 30rpx;
  position: relative;
}

.m-uc-menu .red-dot {
  background-color: #db2929;
  font-size: 25rpx;
  color: #fff;
  width: 37rpx;
  height: 37rpx;
  line-height: 37rpx;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: -11rpx;
  margin-left: 16rpx;
  -webkit-transform: scale(0.8);
  -webkit-min-device-pixel-ratio: 0;
  -webkit-letter-spacing: 1px;
}

.m-uc-menu .list .item .txt {
  display: block;
  color: #666;
  font-size: 24rpx;
  margin-top: 9rpx;
}

.m-uc-menu .menu-icon {
  width: 45rpx;
  height: 45rpx;
}

.m-uc-menu .menu-icon-txt {
  font-size: 60rpx;
  color: #f48f18;
}

.w-button {
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  color: #666;
  display: block;
  width: 100%;
  border: 0;
  background-color: #fff;
  font-size: 24rpx;
  margin-top: 22rpx;
}

/* 列表 */

.list-item {
  background: #f8f8f8;
  height: 100.77rpx;
  line-height: 100.77rpx;
  padding: 0 20.15rpx;
  border: 1px solid #f8f8f8;
  background: #fff;
  font-size: 32.81rpx;
}

.list-icon-wrap {
  float: left;
  height: 100.77rpx;
  line-height: 100.77rpx;
}

.list-icon {
  width: 42.18rpx;
  height: 39.84rpx;
  margin-top: 30rpx;
}

.list-text {
  float: left;
  font-size: 32.81rpx;
  text-indent: 16.29rpx;
}

.list-text-next {
  font-size: 32.81rpx;
  margin-left: 24rpx;
}

.arrow-wrap {
  float: right;
  color: #999;
  line-height: 100.77rpx;
  font-size: 24.44rpx;
}

.list-arrow {
  width: 11.72rpx;
  height: 25.78rpx;
  margin: 35rpx 0 0 18.75rpx;
}
