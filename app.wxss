/**app.wxss**/
@import "ionicons.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  height: 100%;
  flex: 1;
  /*  background-color: #f8f8f8; */
  background-color: #fff;
  font-size: 37.44rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  /*  overflow: hidden; */
  margin: 0;
  padding: 0;
}

.hidden {
  display: none;
}

.section {
 /*  margin: 23.4rpx 0; */
  padding: 0 16.38rpx;
  background-color: white;
}

/** 提示**/

.yatoast {
  display: inline-block;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-right: -50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 30rpx;
  line-height: 48rpx;
  padding: 20rpx 28rpx;
  border-radius: 8rpx;
  max-width: 600rpx;
  z-index: 10000;
}
